<%= render "shared/nav" %>
<div id='content' class="album">

  <div class="swiper-container">
    <div class="swiper-wrapper">
      <% @images.each do |image| %>
        <div class='swiper-slide' data-caption="<%= image.caption %>">
          <div class="image-cover left"></div>
          <div class="image-cover right"></div>
          
          <div class="slide-inner">
            <div class='background-image' style="background-image: url(<%= image.file.url(:original) %>)"></div>
            <% if image.child_image %>
              <div class='background-image' style="background-image: url(<%= image.child_image.file.url(:original) %>)"></div>
            <% end %>
          </div>

        </div>
      <% end %>
    </div>

    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
  </div>

  <footer>
    <div class='page-count'>
      <span>1</span>
      / <%= @images.count %>
    </div>
    <div id='caption'></div>
  </footer>
</div>
