<%= render "shared/index_nav" %>
<div id='content' class="index" style="background-color: <%= @page.settings(:base).background_color %>">
  <header style="background-image: url(<%= @image.file(:original) %>)">
    <div class="header-content text-center vertical-center">
      <h1><%= @page.title %></h1>
      <h2><%= @page.copy %></h2>
    </div>
  </header>


  <div class="grid">
    <div class="grid-sizer"></div>
    <% 5.times do %>
      <% @albums.each do |album| %>
        <%= link_to album_path(album), class: "grid-item" do %>
          <div class="overlay"></div>
          <%= image_tag album.cover_image.url(:thumb) %>
        <% end %>
      <% end %>
    <% end %>
    <% @images.each do |image| %>
      <%= link_to album_path(image.album), class: "grid-item" do %>
        <div class="overlay"></div>
        <%= image_tag image.file.url(:thumb) %>
      <% end %>
    <% end %>
  </div>
</div>
